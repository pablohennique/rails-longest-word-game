<div class="m-5">

  <h1>New Game</h1>

  <p><%= @letters %></p>

  <form action="score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>

      <div class="form-group">
        <label for="input">What is the longest word you can find?</label>
        <div class="row">
          <div class="col p-0">
            <input class="form-control" name ="word" id="input" placeholder="Enter word">
          </div>
          <div class="col p-0">
            <button type="submit" class="btn btn-primary">Play</button>
          </div>
        </div>
      </div>

  </form>

</div>
